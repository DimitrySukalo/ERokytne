@{
    ViewData["Title"] = "Надіслати повідомлення всім";
}

<h1>Надіслати повідомлення всім</h1>

<form asp-action="SendNotifications" method="post">
    <div class="mb-3">
        <label for="text">Повідомлення</label>
        <textarea class="form-control" id="textInput" name="text" placeholder="Впишіть сюди повідомлення"
                    rows="5" maxlength="4096" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Надіслати</button>
</form>